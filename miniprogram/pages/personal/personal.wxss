

/* 头部区域 */
.header {
    position: relative;
    width: 100%;
    height: 300rpx;
}
.header .avatar {
    position: absolute;
    top: 70%;
    left: 50%;
    margin-top: -75rpx;
    margin-left: -75rpx;
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    overflow: hidden;
}


